<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/matrix"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".menu.Apropos">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Retour"
        android:id="@+id/button_retour"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/red_pill"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="478dp"
        android:layout_height="186dp"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:background="#9c000000"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_propos"
                android:id="@+id/textView"
                android:textSize="25dp"
                android:textIsSelectable="false"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_weight="0.92">
            </TextView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
